{
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist", "client"],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["esnext"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "declaration": false,
    "sourceMap": true,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"]
    }
  }
}